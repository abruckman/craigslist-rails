<h1>New Post in <%=@category.name %></h1>

<%= form_for([@category, @category.posts.build]) do |f| %>
  <% if @post %>
    <% if @post.errors.any? %>
      <div id='new_post_errors'>
        <h2>
          <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved :
        </h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li>
              <%= msg%>
            </li>
          <% end %>
        </ul>
    <% end %>
  <% end %>
  <p>
    <%= f.label :title %>* <br />
    <%= f.text_field :title%> <br />
  </p>
  <p>
    <%= f.label :price%> <br />
    <%= f.text_field :price%> <br />
  </p>
  <p>
    <%= f.label :email%>* <br />
    <%= f.text_field :email%> <br />
  </p>
  <p>
    <%= f.label :body%>* <br />
    <%= f.text_area :body%> <br />
  </p>
  <p>
    <%= f.label :location%> <br />
    <%= f.text_field :location%> <br />
  </p>
  <p>
    <%= f.submit %>
  </p>
<%end%>

<p>
  * = required
</p>
